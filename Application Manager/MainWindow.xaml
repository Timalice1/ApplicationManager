<Window x:Class="Application_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="760"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--ToolBar-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#FFE8E6E6">
            <Button Name="btnUninstall" Content="Uninstall" Margin="5" IsEnabled="false"
                    Click="btnUninstall_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Name" Margin="0 0 460 0"/>
            <Label Content="Size" Margin="0 0 120 0"/>
            <Label Content="Install date"/>
        </StackPanel>
        
        <!--Apps list-->
        <ListBox Name="appList" Grid.Row="2" BorderBrush="Silver"
                 SelectionChanged="appList_SelectionChanged"/>

    </Grid>
</Window>
