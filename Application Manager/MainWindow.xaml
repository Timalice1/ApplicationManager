<Window x:Class="Application_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Apps Manager" Grid.Row="0" FlowDirection="LeftToRight"/>
        <Rectangle Fill="Silver" Grid.Row="1"/>
        
        <!--ToolBar-->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Background="#FFE8E6E6">
            <Button Name="btnUninstall" Content="Uninstall" Margin="5" IsEnabled="false"
                    Click="btnUninstall_Click"/>
        </StackPanel>

        <!--Apps list-->
        <ListBox Name="appList" Grid.Row="3" BorderBrush="Silver"
                 SelectionChanged="appList_SelectionChanged"/>

    </Grid>
</Window>
